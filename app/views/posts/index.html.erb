<p id="notice"><%= notice %></p>

<h1 class="container py-3">To do リスト</h1>

<table class="container">
  <thead>
    <tr>
      <th>タスク</th>
      <th>
        <%= link_to("期日", posts_path(order_by: 'up_to_date', order: 'asc'))%>
      </th>
      <th>
        <%= link_to("優先度", posts_path(order_by: 'priority', order: 'desc'))%>
      </th>
      <th>タグ</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr class="To_do_list py-5 w-50 mx-auto">
        <td><%= post.content %></td>
        <td><%= post.up_to_date %></td>
        <td><%= post.priority %></td>
        <td><%= post.tag %></td>
        <td><%= link_to '投稿詳細', post %></td>
        <td><%= link_to '編集', edit_post_path(post) %></td>
        <td><%= link_to '削除', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>